# Contributor: Jakub Luzny <limoto94@gmail.com>

pkgname=fatrat-git
pkgver=20100630
pkgrel=1
pkgdesc='Qt4 (C++) based download manager with support for HTTP, FTP, SFTP, BitTorrent, rapidshare and more'
arch=(i686 x86_64)
url='http://fatrat.dolezel.info/'
license=('GPL')
makedepends=('cmake>=2.6.0' 'git')
depends=('qt>=4.4.0' 'libtorrent-rasterbar>=0.14.5' 'curl' 'gloox>=0.9')
optdepends=('geoip: Displaying country of IP address')
provides=('fatrat=1.1.1')
conflicts=('fatrat')

_gitroot="git://dolezel.info/fatrat.git"
_gitname="fatrat"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d "$srcdir/$_gitname" ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
    cd "$srcdir/$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  cmake . -DCMAKE_INSTALL_PREFIX='/usr' -DWITH_BITTORRENT=ON -DWITH_CURL=ON -DWITH_NLS=ON \
          -DWITH_JABBER=ON -DWITH_DOCUMENTATION=ON -DWITH_WEBINTERFACE=ON
  make
  make DESTDIR="$pkgdir" install 

}

#category: network
# vim:set ts=2 sw=2 et:
