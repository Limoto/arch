# Contributor: Jakub Luzny <limoto94@gmail.com>
pkgname=wuninst-svn
pkgver=3
pkgrel=1
pkgdesc="Advanced uninstaller for Wine"
arch=(i686 x86_64)
url="http://www.dolezel.info/projekty/wuninst/"
license=('GPL')
makedepends=('wine')
provides=('wuninst')
source=()
md5sums=()

_svntrunk="svn://svn.dolezel.info/wuninst/trunk/wuninst/"
_svnmod="wuninst"

build() {
  cd $startdir/src/

  svn co $_svntrunk $_svnmod -r $pkgver

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  if [ -d $_svnmod-build ]; then
    rm -rf $_svnmod-build
  fi

  cp -r $_svnmod $_svnmod-build

  cd $_svnmod-build/

  make
  install -Dm 755 wuninst.exe.so $startdir/pkg/usr/lib/wine/wuninst.exe.so
}

#category: system
# vim:set ts=2 sw=2 et:
