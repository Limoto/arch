# Contributor: Jakub Luzny <limoto94@gmail.com>
pkgname=x86info
pkgver=1.25
pkgrel=1
pkgdesc='A CPU identification utility. Provides more info than /proc/cpuinfo.'
arch=(i686 x86_64)
url="http://www.codemonkey.org.uk/projects/x86info/"
license=('GPL')
install=x86info.install
depends=()
makedepends=()
provides=()
source=(http://www.codemonkey.org.uk/projects/${pkgname}/${pkgname}-${pkgver}.tgz)
md5sums=('29143559c611272ec2045361a6ffd813')

build() {
	cd "$srcdir/$pkgname-$pkgver"

	make
	gzip -9 -f ${pkgname}.1

	mkdir -p "$pkgdir/usr/bin/"
	install -Dm 775 x86info "$pkgdir/usr/bin/"
	install -Dm 644 ${pkgname}.1.gz "$pkgdir/usr/share/man/man1/${pkgname}.1.gz"
}

#category: system
# vim:set ts=2 sw=2 et:
